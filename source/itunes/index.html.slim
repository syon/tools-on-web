css:
  *, *:after, *:before {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
  }
  * {margin:0;padding:0;border: 0 none;position: relative;}
   
  html {
    background: url(background-photo.jpg) no-repeat 50% fixed;
    background-size: cover;
    position: relative;
    width: 100%;
    height: 100%;
    font-family: roboto;
    font-weight: 100;
    overflow-y: scroll;
  }
  body {
    width: 100%;
    min-height: 100%;
    background: inherit;
    overflow: hidden;
    color: #333;
  }
  article {
    background: inherit;
    position: relative;
    width: 80%;
    margin: 10vh auto 15vh;
    border-radius: 15px;
    /*border: 10px solid rgba(255,255,255,.15);*/
    box-shadow: 1px 1px 4px rgba(0,0,0,.3);
    z-index: 5;
    font-size: 1.4rem;
  }
  article:before {
    content: '';
    position: absolute;
    top: 0; left:0; right:0; bottom:0;
    background: inherit;
    filter: blur(5px);
    -webkit-filter: blur(6px);
    -moz-filter: blur(6px);
    -o-filter: blur(6px);
    -ms-filter: blur(6px);
    filter: url(#blur);filter:progid:DXImageTransform.Microsoft.Blur(PixelRadius='6');
  }
  #tile {
    background-color: rgba(255,255,255,.7);
    border-radius: 5px;
    padding: 20px;
    font-size: 14px;
    height: 600px;
  }
  svg {
    height: 0;
    width: 0;
    position: absolute;
  }
  .sidebar {
    position: absolute;
    overflow: scroll;
    top: 0;
    bottom: 0;
    width: 200px;
    z-index: 2;
    margin: 20px 0;
  }
  .sidebar .sidesection {
    margin: 20px 0;
  }
  .content {
    position: absolute;
    left: 200px; right: 0; top: 0; bottom: 0;
    background-color: #fff;
    border-radius: 0 5px 5px 0;
    padding: 0px;
    overflow: auto;
  }
  .content .page {
    padding: 0px;
    background-color: rgb(146,204,217);
    min-height: 100%;
    border-radius: inherit;
  }
  .content .coverimage {
    background-color: rgb(158,220,235);
    border-radius: 0 5px 0 0;
    width: 100%;
    height: 200px;
  }
  .content .pageside {
    float: left;
    width: 250px;
    height: 500px;
    position: relative;
    top: -150px;
    left: 25px;
  }
  .content .pageside .jacket {
    background-color: rgb(58,220,235);
    width: 200px;
    height: 200px;
    border: 1px solid rgba(128,128,128,.3);
    box-shadow: 0 2px 2px rgba(0,0,0,.3);
  }
  .content .pageside .jacketdesc {
    width: 200px;
    padding: 10px 0;
  }
  .content .pageside .jacketdesc .downloadbtn {
    background-color: rgb(237,111,20);
    margin: 10px;
    padding: 4px;
    color: #fff;
    text-align: center;
    text-shadow: 0 -1px 0 #333;
    border-radius: 4px;
    box-shadow: 0 1px 2px rgba(0,0,0,.3);
  }
  .content .pagecontent {
    padding: 20px;
  }


